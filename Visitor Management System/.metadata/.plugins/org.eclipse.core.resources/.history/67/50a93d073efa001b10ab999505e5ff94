<!-- 비밀번호 암호화 등 -->
<script
	src="https://cdnjs.cloudflare.com/ajax/libs/js-sha256/0.9.0/sha256.min.js"></script>
<script>
	function submitForm(form) {
		form.pwd.value = sha256(form.pwd.value);
		form.submit();
	}
</script>

