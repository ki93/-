			e.printStackTrace();
		}
//		return "redirect:/admin/aApplyDetail";
	}
	String changeDateFormat(Date date) {
		SimpleDateFormat simpleDateFormat = new SimpleDateFormat("yyyy-MM-dd");
		String stringDate =simpleDateFormat.format(date);
		return stringDate;
	}
}
