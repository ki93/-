<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.manage.system.mapper.ApplicationMapper">
	<select id="selectApplication" parameterType="Integer"
		resultType="com.manage.system.dto.ApplicationDTO">
		SELECT * FROM APPLICATION WHERE application_num=#{application_num}
	</select>
	<insert id="insertApplication" parameterType="com.manage.system.dto.ApplicationDTO">
		INSERT INTO USER ( application_num, user_id, visit_place, visit_date, visitor_num, visitor_mail, visit_reason, application_date,application_state, refuse_reason, admin_id) VALUES 
		( #{application_num}, #{user_id}, #{visit_place},#{visit_date}, #{visitor_num}, #{visitor_mail}, #{visit_reason}, #{application_date}, #{application_state}, #{refuse_reason}, #{admin_id});
	</insert>
	<update id="updateApplication" parameterType="String,com.manage.system.dto.CustomUserDetails">
		SELECT * FROM USER WHERE user_id=#{user_name}
	</update>
	<insert id="save" parameterType="com.manage.system.dto.CustomUserDetails">
		INSERT INTO USER ( user_id, pwd, user_type, user_name, auth ) VALUES ( #{user_id}, #{pwd}, #{user_type},#{user_name}, #{auth});
	</insert> 
</mapper>

