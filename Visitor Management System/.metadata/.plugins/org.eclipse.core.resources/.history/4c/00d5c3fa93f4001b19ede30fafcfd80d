<script
	src="https://cdnjs.cloudflare.com/ajax/libs/js-sha256/0.9.0/sha256.min.js"></script>
<script>
	function submitForm(form) {
		form.password.value = sha256(form.password.value);
		form.submit();
	}
</script>
