<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.manage.system.mapper.SigninMapper">
	<select id="userSignin" parameterType="String"
		resultType="String">
		SELECT PWD FROM USER WHERE user_id=#{user_id}
	</select>
	<select id="getUserById" parameterType="String"
		resultType="com.manage.system.security.CustomUserDetails">
		SELECT * FROM USER WHERE user_id=#{userId}
	</select>
	<select id="findByUsername" parameterType="String"
		resultType="com.manage.system.security.CustomUserDetails">
		SELECT * FROM USER WHERE user_id=#{userName}
	</select>
	<insert id="save" parameterType="com.manage.system.security.CustomUserDetails">
		INSERT INTO USER ( user_id, pwd, user_type, user_name, auth ) VALUES ( #{userId}, #{pwd}, #{userType},#{userName}, #{auth});
	</insert> 
</mapper>

